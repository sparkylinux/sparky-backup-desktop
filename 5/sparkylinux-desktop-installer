	apt-get purge --yes sparky-desktop-openbox
	apt-get purge --yes elinks
	apt-get purge --yes gpicview
	apt-get purge --yes obmenu-generator
	apt-get purge --yes sparky-obmenu
	apt-get purge --yes obmenu
